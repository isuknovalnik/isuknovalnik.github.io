.is
	width 30%
	padding-top 30px
	color #ffffff
	background-color #7e77e0
	
	+below(r1040)
		width 300px
		flex-shrink 0
		
	+below(r560)
		width 100%
		min-height 440px
		
	&__picture
		width 200px
		height 200px
		margin 0 auto
		font-size 0
		border 2px solid #dddddd
		border-radius 20px
		background-image url(../img/is-1.jpg)
		background-repeat no-repeat
		background-size contain
		background-origin content-box
		
	&__name
		padding 20px 20px 10px
		font-size 30px
		font-weight 700
		text-align center
		
		+below(r560)
			font-size 24px

	&__text
		margin 0
		padding 0 20px 30px
		font-size 20px
		font-style italic
		text-align center

		+below(r560)
			font-size 18px
			
	&-links
		width 135px
		margin 0 auto
		margin-bottom 30px
		display flex
		justify-content space-between
		
		+below(r560)
			width 108px
			margin-bottom 0
		
		&__item
			display block
			width 50px
			height 50px
			font-size 0
			background-repeat no-repeat
			background-size contain
			transition transform 0.6s ease-out
			transform scale(1)
			
			+below(r560)
				width 40px
				height 40px
				
				
			&:hover
				transform scale(1.2)
			
			&--gh
				background-image url(../img/github.svg)

			&--ha
				width 40px
				background-image url(../img/ha.svg)
				
				+below(r560)
					width 32px
